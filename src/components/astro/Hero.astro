---
import HeroCarousel from '../react/HeroCarousel';
---

<style>
    @property --border-angle {
        syntax: "<angle>";
        inherits: false;
        initial-value: 0deg;
    }
    
    @property --glow-opacity {
        syntax: "<number>";
        inherits: false;
        initial-value: 0;
    }
    
    @keyframes border-spin-anim {
        to {
            --border-angle: 360deg;
        }
    }
    
    @keyframes dots-move { 
        0% { background-position: 0 0; } 
        100% { background-position: 24px 24px; } 
    }
    
    .animate-border-spin {
        animation: border-spin-anim 3s linear infinite;
    }
    
    .orange-glow {
        opacity: 0;
        transition: opacity 500ms ease-out;
        will-change: opacity;
        transform: translateZ(0);
    }
    
    .group:hover .orange-glow {
        opacity: 1;
        transition: opacity 300ms ease-in;
    }

    .hero-badge {
        position: relative;
        --border-gradient: linear-gradient(180deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.1));
        --border-radius-before: 9999px;
    }
</style>

<!-- Background Effects (Scrolling) -->
<div class="absolute inset-0 w-full h-full -z-20 pointer-events-none overflow-hidden">
    <div class="absolute top-[-10%] left-1/2 -translate-x-1/2 w-[120%] h-[120%] bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-orange-500/10 via-zinc-900/20 to-black"></div>
    <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 mix-blend-overlay"></div>
</div>

<!-- Grid/Curtain Structure (Scrolling) -->
<div class="absolute inset-0 w-full h-full grid grid-cols-3 md:grid-cols-7 gap-0 -z-10 pointer-events-none overflow-hidden">
    <!-- Left Columns -->
    <div class="relative h-full border-r border-white/5 col-anim delay-1">
        <div class="absolute bottom-0 left-0 right-0 bg-black h-[60%] md:h-[75%] border-t border-white/10 shadow-[0_-20px_60px_-10px_rgba(0,0,0,0.8)]"></div>
    </div>
    <div class="relative h-full border-r border-white/5 col-anim delay-2 hidden md:block">
        <div class="absolute bottom-0 left-0 right-0 bg-black h-[65%] border-t border-white/10 shadow-[0_-20px_60px_-10px_rgba(0,0,0,0.8)]"></div>
    </div>
    <div class="relative h-full border-r border-white/5 col-anim delay-3 hidden md:block">
        <div class="absolute bottom-0 left-0 right-0 bg-black h-[55%] border-t border-white/10 shadow-[0_-20px_60px_-10px_rgba(0,0,0,0.8)]"></div>
    </div>

    <!-- Center Column -->
    <div class="relative h-full border-r border-white/5 md:border-none col-anim delay-4">
        <div class="absolute bottom-0 left-0 right-0 bg-black h-[40%] md:h-[45%] border-t border-white/10 shadow-[0_-20px_60px_-10px_rgba(0,0,0,0.8)]"></div>
        <div class="absolute top-[20%] left-0 right-0 h-[30%] bg-gradient-to-b from-orange-500/5 to-transparent pointer-events-none"></div>
    </div>

    <!-- Right Columns -->
    <div class="relative h-full border-l border-white/5 col-anim delay-5 hidden md:block">
        <div class="absolute bottom-0 left-0 right-0 bg-black h-[55%] border-t border-white/10 shadow-[0_-20px_60px_-10px_rgba(0,0,0,0.8)]"></div>
    </div>
    <div class="relative h-full border-l border-white/5 col-anim delay-6 hidden md:block">
        <div class="absolute bottom-0 left-0 right-0 bg-black h-[65%] border-t border-white/10 shadow-[0_-20px_60px_-10px_rgba(0,0,0,0.8)]"></div>
    </div>
    <div class="relative h-full border-l border-white/5 col-anim delay-7">
        <div class="absolute bottom-0 left-0 right-0 bg-black h-[60%] md:h-[75%] border-t border-white/10 shadow-[0_-20px_60px_-10px_rgba(0,0,0,0.8)]"></div>
    </div>
</div>

<section class="min-h-screen flex flex-col md:pt-20 overflow-hidden w-full pt-32 mb-24 md:mb-32 relative items-center justify-center" style="mask-image: linear-gradient(180deg, transparent, black 0%, black 95%, transparent);">
        <!-- Content Container -->
        <div class="text-center max-w-5xl z-10 mt-24 mr-auto mb-24 ml-auto pr-6 pl-6 relative">
            
            <!-- Badge -->
            <div class="hero-badge [animation:fadeSlideIn_1s_ease-out_0.8s_both] animate-on-scroll inline-flex transition-transform hover:scale-105 cursor-pointer group animate bg-gradient-to-br from-white/10 to-white/0 rounded-full mb-10 pt-1.5 pr-3 pb-1.5 pl-3 md:backdrop-blur-sm gap-x-2 gap-y-2 items-center">
                <span class="flex h-1.5 w-1.5 rounded-full bg-orange-500 shadow-[0_0_10px_rgba(249,115,22,0.5)] group-hover:animate-pulse"></span>
                <span class="text-xs font-medium text-orange-100/80 tracking-wide group-hover:text-white transition-colors font-sans">2025 Tax Season Â· Filing in 2026</span>
            </div>

            <!-- Heading with Carousel -->
            <h1 class="[animation:fadeSlideIn_1s_ease-out_1s_both] animate-on-scroll animate flex flex-col items-center justify-center leading-[1.05] text-5xl md:text-[96px] cursor-default font-medium tracking-tighter font-manrope mb-8">
                <span class="inline-flex bg-clip-text text-transparent bg-gradient-to-b from-white via-white to-white/50 pr-1">Your Data Has</span>
                <span class="inline-flex text-white mt-1">
                    <HeroCarousel client:load />
                </span>
            </h1>

        <!-- Subtext -->
        <p class="[animation:fadeSlideIn_1s_ease-out_1.2s_both] animate-on-scroll leading-relaxed md:text-xl text-lg text-gray-400 tracking-normal max-w-3xl mx-auto mb-12 animate font-manrope font-medium">
            We've reconciled over $1B in crypto.<br />Let's fix yours before April.
        </p>

        <!-- CTAs -->
        <div class="[animation:fadeSlideIn_1s_ease-out_1.4s_both] animate-on-scroll flex flex-col items-center justify-center gap-10 mb-12 animate">
            <a href="/form" class="comet-button group flex overflow-hidden uppercase transition-all duration-500 hover:scale-[1.02] hover:shadow-[0_0_40px_-10px_rgba(234,88,12,0.5)] focus:outline-none text-sm font-medium text-white tracking-widest font-geist rounded-full pt-5 pr-6 pb-5 pl-6 md:pr-12 md:pl-12 relative items-center justify-center cursor-pointer [background:linear-gradient(#3f3f46,#27272a)_padding-box,conic-gradient(from_var(--border-angle),rgb(24_24_27/.48)_80%,_#ea580c_86%,_#fb923c_90%,_#ea580c_94%,_rgb(24_24_27/.48))_border-box] border border-transparent animate-border-spin">
                    <!-- Inner Background & Effects -->
                    <div class="-z-10 overflow-hidden bg-zinc-800 rounded-full absolute top-[2px] right-[2px] bottom-[2px] left-[2px]">
                        <!-- Light Monotone Gradient Background -->
                        <div class="absolute inset-0 bg-gradient-to-b from-zinc-700 to-zinc-800"></div>
                        
                        <!-- Orange Glow (Internal) -->
                        <div class="orange-glow absolute bottom-0 left-1/2 -translate-x-1/2 w-2/3 h-1/2 bg-orange-500/50 blur-2xl rounded-full pointer-events-none"></div>
                    </div>

                    <!-- Content -->
                    <span class="relative z-10 text-white transition-colors group-hover:text-white font-sans">Claim My Free Consultation</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right relative z-10 ml-2 transition-transform duration-300 group-hover:translate-x-1"><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg>
                </a>

                <!-- Trust Indicators -->
                <div class="flex flex-wrap justify-center gap-x-8 gap-y-4 opacity-70">
                    <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-orange-500"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path><path d="m9 12 2 2 4-4"></path></svg>
                        <span class="text-xs font-medium uppercase tracking-widest">IRS-Compliant</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-orange-500"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                        <span class="text-xs font-medium uppercase tracking-widest">CPA-Backed</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-orange-500"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
                        <span class="text-xs font-medium uppercase tracking-widest">Audit-Ready</span>
                    </div>
                </div>
            </div>

        </div>

        <!-- Authority / Social Proof (Updated Ticker) -->
        <section class="z-10 fade-in fade-in-delay-4 pt-8 pb-8 relative w-full max-w-7xl mx-auto" style="opacity: 1; transform: translateY(0px);">
            <div class="sm:px-6 lg:px-8 mr-auto ml-auto pr-4 pl-4">
                <div class="text-center mb-12">
                    <p class="uppercase text-xs font-medium text-zinc-500 tracking-wide">You're in Expert Hands</p>
                </div>

                <!-- Ticker Container -->
                <div class="overflow-hidden relative" style="mask-image: linear-gradient(to right, transparent, black 15%, black 85%, transparent); -webkit-mask-image: linear-gradient(to right, transparent, black 15%, black 85%, transparent);">
                    
                    <!-- Animated Ticker -->
                    <div class="ticker-track flex gap-16 pt-2 pb-2 items-center">
                        <!-- First set of stats -->
                        <div class="flex gap-16 shrink-0 items-center">
                            <div class="flex items-center gap-3 text-zinc-400 hover:text-white transition-colors duration-300">
                                <span class="text-lg font-semibold tracking-tighter font-manrope">$1B+ Reconciled</span>
                            </div>

                            <div class="flex items-center gap-3 text-zinc-400 hover:text-white transition-colors duration-300">
                                <span class="text-lg font-semibold tracking-tighter font-manrope">98% Satisfaction</span>
                            </div>

                            <div class="flex items-center gap-3 text-zinc-400 hover:text-white transition-colors duration-300">
                                <span class="text-lg font-semibold tracking-tighter font-manrope">Tax Attorney Backed</span>
                            </div>

                            <div class="flex items-center gap-3 text-zinc-400 hover:text-white transition-colors duration-300">
                                <span class="text-lg font-semibold tracking-tighter font-manrope">CPA Certified</span>
                            </div>

                            <div class="flex items-center gap-3 text-zinc-400 hover:text-white transition-colors duration-300">
                                <span class="text-lg font-semibold tracking-tighter font-manrope">Audit Defense</span>
                            </div>
                        </div>

                        <!-- Duplicate set for seamless loop -->
                        <div class="flex items-center gap-16 shrink-0">
                            <div class="flex items-center gap-3 text-zinc-400 hover:text-white transition-colors duration-300">
                                <span class="text-lg font-semibold tracking-tighter font-manrope">$1B+ Reconciled</span>
                            </div>

                            <div class="flex items-center gap-3 text-zinc-400 hover:text-white transition-colors duration-300">
                                <span class="text-lg font-semibold tracking-tighter font-manrope">98% Satisfaction</span>
                            </div>

                            <div class="flex items-center gap-3 text-zinc-400 hover:text-white transition-colors duration-300">
                                <span class="text-lg font-semibold tracking-tighter font-manrope">Tax Attorney Backed</span>
                            </div>

                            <div class="flex items-center gap-3 text-zinc-400 hover:text-white transition-colors duration-300">
                                <span class="text-lg font-semibold tracking-tighter font-manrope">CPA Certified</span>
                            </div>

                            <div class="flex items-center gap-3 text-zinc-400 hover:text-white transition-colors duration-300">
                                <span class="text-lg font-semibold tracking-tighter font-manrope">Audit Defense</span>
                            </div>
                        </div>
                        
                        <!-- Third set for seamless loop on large screens -->
                        <div class="flex items-center gap-16 shrink-0">
                            <div class="flex items-center gap-3 text-zinc-400 hover:text-white transition-colors duration-300">
                                <span class="text-lg font-semibold tracking-tighter font-manrope">$1B+ Reconciled</span>
                            </div>

                            <div class="flex items-center gap-3 text-zinc-400 hover:text-white transition-colors duration-300">
                                <span class="text-lg font-semibold tracking-tighter font-manrope">98% Satisfaction</span>
                            </div>

                            <div class="flex items-center gap-3 text-zinc-400 hover:text-white transition-colors duration-300">
                                <span class="text-lg font-semibold tracking-tighter font-manrope">Tax Attorney Backed</span>
                            </div>

                            <div class="flex items-center gap-3 text-zinc-400 hover:text-white transition-colors duration-300">
                                <span class="text-lg font-semibold tracking-tighter font-manrope">CPA Certified</span>
                            </div>

                            <div class="flex items-center gap-3 text-zinc-400 hover:text-white transition-colors duration-300">
                                <span class="text-lg font-semibold tracking-tighter font-manrope">Audit Defense</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <style>
                @keyframes ticker {
                    0% {
                        transform: translateX(0);
                    }
                    100% {
                        transform: translateX(-33.33%);
                    }
                }

                .ticker-track {
                    animation: ticker 40s linear infinite;
                    width: max-content;
                }

                .ticker-track:hover {
                    animation-play-state: paused;
                }
            </style>
        </section>
    </section>
